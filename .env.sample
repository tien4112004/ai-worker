# Environment variables configuration
APP_NAME=fastapi-langchain-starter

# LLM Configuration
DEFAULT_MODEL=gemini-2.5-flash-lite
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
MAX_RETRIES=3

# SDK key
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=

# OpenRouter Configuration
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_CREDENTIALS=True
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# For Google VertexAI
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
VERTEX_PROJECT_ID=
VERTEX_LOCATION=us-central1

LOCALAI_API_KEY=sk-local
LOCALAI_BASE_URL=http://localhost:8083

# PostgreSQL Database Configuration (same as be/)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/datn_monolith_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=datn_monolith_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
